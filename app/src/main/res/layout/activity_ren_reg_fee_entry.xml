<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ren_RegFeeEntryActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        tools:ignore="MissingConstraints">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_ren_rev_entry"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme" >
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight=".7">

            <TextView
                android:id="@+id/text_year_month"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectengleshape"
                android:gravity="center"
                android:text="-- Select Month-Year --"
                android:textColor="@android:color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorPrimary"
                android:background="@android:color/white"
                android:text=" Select Month-Year " />
        </FrameLayout>

        <Button
            android:id="@+id/upload_data"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center_vertical"
            android:layout_weight=".3"
            android:background="@drawable/green_button"
            android:text="Save" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".4"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:text="Type"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_gravity="center_vertical"
            android:text="Previous Month"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Current Month"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight=".2"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Total Sum"
            android:layout_gravity="center_vertical"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:padding="10dp"
            android:text="Reneval/Licence Fee"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".4">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:singleLine="false"
                    android:textStyle="normal"
                    android:textSize="17sp"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/holo_blue_dark"
                    android:text="Manufacturer"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/cardview_dark_background"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".2">

                <TextView
                    android:id="@+id/text_m_previous"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:hint="0"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/cardview_dark_background"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2">
                <EditText
                    android:id="@+id/edit_m_current"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:hint="0"
                    android:text="0"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/cardview_dark_background"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".2">

                <TextView
                    android:id="@+id/text_m_tot_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/cardview_dark_background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".4">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:singleLine="false"
                    android:textStyle="normal"
                    android:textSize="17sp"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/holo_blue_dark"
                    android:text="Deler"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/cardview_dark_background"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".2">

                <TextView
                    android:id="@+id/text_d_previous"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:hint="0"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/cardview_dark_background"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2">
                <EditText
                    android:id="@+id/edit_d_current"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:hint="0"
                    android:text="0"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/cardview_dark_background"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".2">

                <TextView
                    android:id="@+id/text_d_tot_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/cardview_dark_background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".4">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:singleLine="false"
                    android:textStyle="normal"
                    android:textSize="17sp"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/holo_blue_dark"
                    android:text="Repairer"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/cardview_dark_background"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".2">

                <TextView
                    android:id="@+id/text_r_previous"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:hint="0"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@android:color/holo_red_dark"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/cardview_dark_background"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".2">
                <EditText
                    android:id="@+id/edit_r_current"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"
                    android:background="@android:color/transparent"
                    android:hint="0"
                    android:text="0"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/cardview_dark_background"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".2">
                <TextView
                    android:id="@+id/text_r_tot_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="@android:color/black"
                    android:text="0"/>
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/cardview_dark_background"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".4">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:singleLine="false"
                    android:textStyle="normal"
                    android:textSize="17sp"
                    android:gravity="center_vertical"
                    android:textColor="@color/colorAccent"
                    android:text="Total"/>
            </LinearLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/cardview_dark_background"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight=".2">

                <TextView
                    android:id="@+id/text_row_tot1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:hint="0"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/blueNavy"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/cardview_dark_background"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2">

                <TextView
                    android:id="@+id/text_row_tot2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:hint="0"
                    android:singleLine="true"
                    android:text="0"
                    android:textColor="@color/blueNavy"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@color/cardview_dark_background"/>
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight=".2">

                <TextView
                    android:id="@+id/text_row_tot3"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="0"
                    android:textColor="@color/blueNavy"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/cardview_dark_background"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:padding="10dp"
        android:text="Registration Fee"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".4">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:singleLine="false"
                android:textStyle="normal"
                android:textSize="17sp"
                android:gravity="center_vertical"
                android:textColor="@android:color/holo_blue_dark"
                android:text="Packer"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/cardview_dark_background"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight=".2">

            <TextView
                android:id="@+id/text_p_previous"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:hint="0"
                android:singleLine="true"
                android:text="0"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/cardview_dark_background"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2">
            <EditText
                android:id="@+id/edit_p_current"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:singleLine="true"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:hint="0"
                android:text="0"/>
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:background="@color/cardview_dark_background"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight=".2">
            <TextView
                android:id="@+id/text_p_tot_sum"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:text="0"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/cardview_dark_background"/>
</LinearLayout>