<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="viewmodel"
            type="org.nic.lmd.officerapp.inspectionEntry.InspectionEntryViewModel" />

    </data>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".inspectionEntry.InspectionentryActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_ins_entry"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/AppTheme"
           />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/toolbar_ins_entry"
        android:layout_above="@+id/submit_ins"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:nextFocusDown="@+id/login2">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Premises Name"
                android:inputType="text"
                android:singleLine="true"
                android:value="@={viewmodel.areaInspection.premisesName}" />
        </com.google.android.material.textfield.TextInputLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/rectangle"
                android:padding="3dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:background="@android:color/white"
                android:padding="3dp"
                android:text="Business Type *"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />
        </FrameLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
           >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ownwr Name"
                android:inputType="text"
                android:singleLine="true"
                android:text="@={viewmodel.areaInspection.ownerName}"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
           >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:inputType="text"
                android:singleLine="true"
                android:text="@={viewmodel.areaInspection.address}"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
          >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="text"
                android:singleLine="true"
                android:text="@={viewmodel.areaInspection.name}"/>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
           >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Father Name"
                android:inputType="text"
                android:singleLine="true"
                android:text="@={viewmodel.areaInspection.fatherName}"/>
        </com.google.android.material.textfield.TextInputLayout>
     <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:checked="@={viewmodel.areaInspection.present}"
            android:text="Is Present"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:checked="@={viewmodel.areaInspection.display}"
            android:text="Is Display Board Avalable"/>
    </LinearLayout>
        <Button
            android:id="@+id/submit_ins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimary"
            android:onClick="@{viewmodel.onSubmit}"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</layout>